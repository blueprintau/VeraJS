{
  "name": "verajs",
  "version": "2.0.0",
  "description": "A lightweight JavaScript framework for building reactive web applications",
  "main": "dist/vera.min.js",
  "module": "dist/vera.min.js",
  "type": "module",
  "types": "./types/vera.d.ts",
  "exports": {
    ".": {
      "types": "./dist/vera.d.ts",
      "import": "./dist/vera.min.js",
      "require": "./dist/vera.min.js",
      "default": "./dist/vera.min.js"
    },
    "./types": {
      "types": "./dist/vera.d.ts"
    }
  },
  "files": [
    "dist/vera.min.js",
    "dist/vera.d.ts",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:js && npm run build:types",
    "build:js": "webpack --mode=production",
    "build:types": "tsc && rollup -c rollup.config.mjs",
    "build:dev": "webpack --mode=development",
    "dev": "webpack serve --mode=development",
    "dev:with-types": "concurrently \"npm run watch\" \"npm run watch:types\"",
    "watch": "webpack --mode=development --watch",
    "watch:types": "nodemon --watch src --ext js --exec 'npm run build:types'",
    "clean": "rimraf dist/ temp-types/",
    "test:types": "tsc --noEmit dist/vera.d.ts",
    "prepublishOnly": "npm run build",
    "postbuild": "echo 'âœ… Build complete: vera.min.js and vera.d.ts generated'",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "javascript",
    "framework",
    "reactive",
    "spa",
    "router",
    "components",
    "esm",
    "umd",
    "typescript",
    "jsdoc"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/verajs.git"
  },
  "homepage": "https://github.com/yourusername/verajs#readme",
  "bugs": {
    "url": "https://github.com/yourusername/verajs/issues"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "babel-loader": "^9.1.0",
    "concurrently": "^8.2.2",
    "dts-bundle-generator": "^9.5.1",
    "happy-dom": "^20.0.1",
    "nodemon": "^3.0.2",
    "rimraf": "^5.0.5",
    "rollup": "^4.52.5",
    "rollup-plugin-dts": "^6.2.3",
    "terser-webpack-plugin": "^5.3.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^5.2.2"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "jsdom": "^27.0.1"
  }
}
