{
  "name": "verajs",
  "version": "1.0.0",
  "description": "A lightweight JavaScript framework for building reactive web applications",
  "main": "dist/vera.min.js",
  "module": "dist/vera.min.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/vera.min.js",
      "require": "./dist/vera.min.js",
      "script": "./dist/vera.min.js"
    },
    "./component": {
      "import": "./dist/vera.min.js",
      "require": "./dist/vera.min.js"
    }
  },
  "files": [
    "dist/",
    "src/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "webpack --mode=production",
    "build:dev": "webpack --mode=development",
    "dev": "webpack serve --mode=development",
    "watch": "webpack --mode=development --watch",
    "clean": "rm -rf dist/",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "javascript",
    "framework",
    "reactive",
    "spa",
    "router",
    "components",
    "esm",
    "umd"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/verajs.git"
  },
  "homepage": "https://github.com/yourusername/verajs#readme",
  "bugs": {
    "url": "https://github.com/yourusername/verajs/issues"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-private-methods": "^7.18.6",
    "@babel/plugin-transform-private-property-in-object": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "babel-loader": "^9.1.0",
    "terser-webpack-plugin": "^5.3.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^5.2.2"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "sideEffects": false
}